<div class="field alpha omega eight columns">
  <label for="<%= "#{param_prefix}_preferred_amount" %>"><%= t('promotion_rule_types.item_total.description') %></label><br>
  <%= select_tag "#{param_prefix}[preferred_operator]", options_for_select(Spree::Promotion::Rules::ItemTotal::OPERATORS.map{|o| [t("item_total_rule.operators.#{o}"),o]}, promotion_rule.preferred_operator), :class => 'select2', :style => 'width:30%' %>
  <%= text_field_tag "#{param_prefix}[preferred_amount]", promotion_rule.preferred_amount, :size => 10, :style => 'width:49%' %><br>

  <label for="<%= "#{param_prefix}_preferred_taxon_ids" %>"><%= "Taxons" %></label>
  <%= hidden_field_tag "#{param_prefix}[preferred_taxon_ids]", promotion_rule.preferred_taxon_ids, :class => 'promo-taxon-autocomplete fullwidth', :placeholder => 'Select Taxon(s)' %>
</div>
